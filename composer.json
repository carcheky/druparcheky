{
    "name": "carcheky/druparcheky-recommended-project",
    "description": "Project template for Druparcheky",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/carcheky/druparcheky-recommended-project/",
    "repositories": [{
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "carcheky/druparcheky_profile": "^1.0",
        "carcheky/druparcheky_theme": "^1.0",
        "composer/installers": "1.7.0",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "^8.8",
        "drush/drush": "^10.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "pre-install-cmd": [
            "echo pre-script",
            "if [ -d  web/sites/default ]; then chmod 775 web/sites/default ; fi"
        ],
        "pre-update-cmd": [
            "echo pre-script",
            "if [ -d  web/sites/default ]; then chmod 775 web/sites/default ; fi"
        ],
        "post-install-cmd": [
            "echo post-script",
            "if [ -f  web/sites/default/settings.php ]; then drush updb -y; else echo no existe settings.php ; fi",
            "if [ -f  web/sites/default/settings.php ]; then drush locale-check  2>/dev/null && drush locale-update; else echo no existe settings.php ; fi"
        ],
        "post-update-cmd": [
            "echo post-script",
            "if [ -f  web/sites/default/settings.php ]; then drush updb -y; else echo no existe settings.php ; fi",
            "if [ -f  web/sites/default/settings.php ]; then drush locale-check  2>/dev/null && drush locale-update; else echo no existe settings.php ; fi"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    }
}
